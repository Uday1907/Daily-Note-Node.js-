<%- include('partials/header') -%>
<h1>Compose Here</h1>
<form action="/compose" method="post">
    <div class="mb-3">
    <label for="Titlecard" clas="form-label" >Title</label>
    <input  class="form-control" id="Titlecard" type="text" name="postTitle" >
    </div>
    <div class="mb-3">
    <label class="form-label" for="post">Post</label>
    <textarea class="form-control" id="post" name="postContent" rows="4"></textarea>
    </div>
    <button class="btn btn-primary" type="submit" >Publish</button>

</form>
<%- include('partials/footer') -%>